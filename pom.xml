    <!--use profiles here to set parameters in files like logback.xml and web.xml,
        because they will be filtered (changed) by Maven during the build, and we won't have to futz with configuration variables.
        We only have to worry about -Denv=dev or -Denv=prod
    -->

<!-- NOW all we need to run is:
    mvn -P project package
-->
    <profiles>
        <profile>
            <id>sim</id>
            <modules>
                <module>simulation</module>
            </modules>
        </profile>
        <profile>
            <id>admin</id>
            <modules>
                <module>admin</module>
            </modules>
        </profile>
        <profile>
            <id>signup</id>
            <modules>
