            </modules>
        </profile>
        <profile>
            <id>survey</id>
            <modules>
                <module>survey</module>
            </modules>
        </profile>

        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>env</name>
                    <value>dev</value>
                </property>
            </activation>
            <properties>
                <logback-root-level>DEBUG</logback-root-level>
                <vaadin-production-mode>false</vaadin-production-mode>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>prod</value>
                </property>
            </activation>
            <properties>
                <logback-root-level>WARNING</logback-root-level>
                <vaadin-production-mode>true</vaadin-production-mode>
            </properties>
        </profile>
    </profiles>
